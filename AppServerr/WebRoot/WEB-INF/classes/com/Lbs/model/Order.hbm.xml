<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.Lbs.model.Order" table="order" >
		<id name="orderId" column="order_id" type="integer">
			<generator class="increment"></generator>
		</id>
		<property name="parkName" column="park_name" type="string" not-null="true"></property>
		<property name="parkAddress" column="park_address" type="string" not-null="true"></property>
		<property name="driverNum" column="driver_num" type="string" not-null="true"></property>
		<property name="orderDate" column="order_date" type="string" not-null="true"></property>
		<property name="driverPhone" column="driver_phone" type="string" not-null="true"></property>
		<property name="orderInfo" column="order_info" type="string" not-null="true"></property>
		<property name="orderPrice" column="order_price" type="string" not-null="true"></property>
		<property name="orderStatus" column="order_status" type="string" not-null="true"></property>
		<many-to-one name="admin" class="com.Lbs.model.Admin" column="admin_id">
		</many-to-one>
		<many-to-one name="driver" class="com.Lbs.model.Driver" column="driver_id">
		</many-to-one>
	</class>
</hibernate-mapping>